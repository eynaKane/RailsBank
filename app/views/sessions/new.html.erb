<h1>Sign In</h1>
<% if flash[:notice] %>
  <div class="notice" style="color: red;"> <%= flash[:notice] %> </div>
<% end %>
<% unless @error.blank? %>
  <li style="color:red;"> <%= @error %> </li>
<% end %>
  <%= form_for(:session, url: new_session_path) do |f| %>
    <h2> <%= f.label :email, "Email" %>
    <%= f.text_field :email %> </h2>

    <h2> <%= f.label :password, "Password" %>
    <%= f.password_field :password %> </h2>

    <%= f.submit "Sign In", disable_with: 'Signing In...' %>
  <% end %>
