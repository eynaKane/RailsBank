<h1>Sign Up</h1>
<% @user.errors.each do |_, v| %>
  <li style="color:red;"> <%= v.to_s %> </li>
<% end %>
<%= form_for @user, url: save_new_user_path, html: { method: :post } do |f| %>
  <h2> <%= f.label :fname, "First Name" %>
  <%= f.text_field :fname %> </h2>
  <h2> <%= f.label :lname, "Last Name" %>
  <%= f.text_field :lname %> </h2>
  <h2> <%= f.label :email, "Email" %>
  <%= f.text_field :email %> </h2>
  <h2> <%= f.label :password, "Password" %>
  <%= f.password_field :password %> </h2>
  <h2> <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %> </h2>
  <%= f.submit "Sign Up", :disable_with => 'Signing Up...' %>
<% end %>
